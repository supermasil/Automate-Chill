<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CS70"
        android:layout_marginBottom="260dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/logo1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="150dp"
        android:layout_marginTop="70dp"
        android:text="@string/title"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingLeft="145dp"
        android:layout_marginTop="0dp"
        android:text="@string/slogan"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:autofillHints="@id/email"
        android:background="@drawable/textbox"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:singleLine="false" />


    <Button
        android:id="@+id/CS61A"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:text="@string/CS61A"
        android:enabled="false"/>

    <Button
        android:id="@+id/CS61B"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/CS61A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/CS61B"
        android:enabled="false"/>


    <Button
        android:id="@+id/CS70"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/CS61B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/CS70"
        android:enabled="false"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CS70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:max="100"
        android:progressTint="@android:color/holo_green_light"
        android:visibility="visible"
        tools:visibility="visible" />



</RelativeLayout>